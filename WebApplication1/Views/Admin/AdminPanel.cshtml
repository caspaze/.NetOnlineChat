@using OnlineChat.Models.Users
@model OnlineChat.ViewModels.CreateModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<ul class="chat">
@foreach (User user in ViewBag.Users)
{
    @if (user.Role == "Admin")
    {
        <li>
        <label>@user.UserName</label>
        <form asp-controller="Admin" asp-action="RemoveAdmin">

            <div class="form-group notdisp">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" value=@user.UserName />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Забрать Админа" class="btn btn-primary pink" />
            </div>
        </form>
            </li>
    }
        @if (user.Role == "User")
        {
            <li>
            <label>@user.UserName</label>
            <form asp-controller="Admin" asp-action="AddAdmin">

                <div class="form-group notdisp">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input type="text" asp-for="Name" class="form-control" value=@user.UserName />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Дать Админа" class="btn btn-primary pink" />
                </div>
            </form>
                </li>
        }
    }
</ul>
<form asp-controller="Admin" asp-action="Search">
    <div class="form-group">
        <label asp-for="Text" class="control-label">Логин</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Искать" class="btn btn-primary" />
    </div>
</form>